{{> header }}
<div class="section-padding dashboard">
<h1>{{ title }}</h1>
<form method="POST">
    <fieldset>
        <label>Expense:</label>
        <input name="expense" id="expense" value="{{ expense.expense }}" required />
    </fieldset>
    <fieldset>
        <label for="category">Category:</label>
        <select name="course" id="course">
            {{#each categories}}
                <option>{{ this.name }}</option>
            {{/each}}
        </select>
    </fieldset>
    <fieldset>
        <label for="date">Date:</label>
        <input name="date" id="date" type="date" value="{{ dateReformat expense.date }}" required />
    </fieldset>
    <fieldset>
        <label for="amount">Amount:</label>
        <input name="amount" id="amount" type="number" value="{{ expense.amount }}" required />
    </fieldset>
    <fieldset>
        <label for="description">Description:</label>
        <textarea  name="description" id="description" value="{{ expense.description }}"></textarea>
    </fieldset>
    <button class="btn btn-primary">Update</button>
    <button type="button" class="btn btn-secondary" onclick="history.back()">Cancel</button>
</form>
</div>