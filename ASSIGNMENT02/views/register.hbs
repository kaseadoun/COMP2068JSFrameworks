<div id="login-register-layout">
  <div id="login-register-container">
    <h1>{{ title }}</h1>
    <form method="POST">
      <fieldset>
        <label for="username" class="labels">Username:</label>
        <input
          name="username"
          id="username"
          type="email"
          placeholder="Enter Your Email"
          required
        />
      </fieldset>
      <fieldset>
        <label for="password" class="labels">Password:</label>
        <input
          name="password"
          id="password"
          type="password"
          pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
          required
        />
      </fieldset>
      <fieldset>
        <label for="confirm" class="labels">Confirm Password:</label>
        <input
          name="confirm"
          id="confirm"
          type="password"
          pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
          required
        />
      </fieldset>
      <button>Register</button>
      </form>
      <a href="/" id="cancel-button">Cancel</a>
      <div class="text-below-cancel">
        <p>Already have an account?</p>
        <a href="/login" title="Login">Login</a>
      </div>
      <p>Or</p>
      <a href="github" class="github-button button">Sign Up with GitHub</a>
  </div>
</div>